//multiplicacion de los primeros numeros de 1 a N
#include <iostream>

using namespace std;

int main()
{
    int N, P=1;
    
    cout<<"ingresa el numero hasta donde quieres contar(N): ";
    cin>>N;
    
    for(int i=1; i<=N; i++) //iniciamos en 1 porque nos pide contar desde 1
    {   
            P=P*i;
    }
    cout<<"la multiplicacion de los numeros entre 1 y N es: "<<P;

    return 0;
}
