//la tabla de sumar decimal (1 al 10)
#include <iostream>

using namespace std;

int main() {
    // Imprimir la cabecera de la tabla
    cout << "Tabla de Sumar (1 al 10)" << endl;
    cout << "----------------------------------------------" << endl;

    // Imprimir la primera fila (encabezado de la tabla)
    cout << " + |";
    for (int i = 1; i <= 10; i++) {
        cout << " " << i << " |";
    }
    cout << endl;
    cout << "----------------------------------------------" << endl;

    // Imprimir las filas de la tabla
    for (int j = 1; j <= 10; j++) {
        cout << " " << j << " |"; // Imprimir el número en la columna de la izquierda
        for (int i = 1; i <= 10; i++) {
            cout << " " << (j + i) << " |"; // Imprimir la suma
        }
        cout << endl;
        cout << "----------------------------------------------" << endl; // Línea divisoria
    }

    return 0;
}
