//la tabla de sumar decimal (1 al 10)
#include <iostream>

using namespace std;

int main() {
    //titulo
    cout<<"Tabla de Sumar (1 al 10)"<<endl;
    cout<<"----------------------------------------------"<<endl;

    //primera fila cabeza
    cout<<" + |";
    for (int i=1; i<=10; i++) {
        cout<<" "<<i<<" |";
    }
    cout<<endl;
    cout<<"----------------------------------------------"<<endl;

    // Imprimir las filas de la tabla
    for(int j=1; j<=10; j++) {
        cout<<" "<<j <<" |"; // iniciales, primer columna
        for(int i=1; i<=10; i++) {
            cout<<" "<< (j+i) <<" |"; //suma
        }
        cout<<endl;
        cout<<"----------------------------------------------"<<endl; //division
    }

    return 0;
}
